@import url('https://fonts.googleapis.com/css?family=Roboto|Montserrat|Roboto+Mono');


body {
  font-family: 'Roboto', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Montserrat", sans-serif;
}

h1 {
  letter-spacing: -0.6px;
  font-weight: 400;
}

h2 {
  letter-spacing: -0.6px;
  font-weight: 500;
}

.content:not(.custom) > h2 {
  padding-top: 5rem;
}

h3 {
  letter-spacing: -0.6px;
  font-weight: 500;
}

iframe {
  width: 100%;
  border-radius: 6px
  height: auto;
}

.theme-container pre code,
.theme-container .content pre code,
.theme-container pre[class*="language-"] code,
.theme-container .content pre[class*="language-"] code {
  font-family: 'Roboto Mono', sans-serif;
  color: $text;
  line-height: normal;
}

.view-source {
  display: block;
  text-align: right;
}

.theme-container div[class*="language-"]:before {
  color: $muted;
}

.theme-container div[class~="language-css"],
.theme-container div[class~="language-html"] {
  .token.punctuation {
    color: $muted;
  }

  .token.tag, .token.attr-name, .token.namespace, .token.deleted {
    color: $blue;
  }

  .token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata {
    color: $gray;
  }

  .token.attr-name {
    color: $red;
  }

  .token.string, .token.char, .token.attr-value, .token.regex, .token.variable {
    color: $green;
  }

  .token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin {
    color: $blue;
  }
}

.theme-container div[class~="language-javascript"],
.theme-container div[class~="language-js"] {
  .token.punctuation {
    color: $muted;
  }

  .token.boolean, .token.number, .token.function {
    color: $blue;
  }

  .token.tag, .token.attr-name, .token.namespace, .token.deleted {
    color: $blue;
  }

  .token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata {
    color: $gray;
  }

  .token.attr-name {
    color: $red;
  }

  .token.string, .token.char, .token.attr-value, .token.regex, .token.variable {
    color: $green;
  }

  .token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin {
    color: $blue;
  }
}

.theme-container div[class~="language-css"] {
  .token.selector {
    color: $text;
  }

  .token.property {
    color: $blue;
  }
}

.configuration-example-frame {
  overflow: auto;
}

.configuration-example-frame--small {
  height: 80px;
}

.configuration-example-frame--middle {
  height: 160px;
}

.theme-container p a > code {
  text-decoration: underline;
}

.theme-container p a:hover > code {
  text-decoration: none;
}
